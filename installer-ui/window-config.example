# illumos Installer UI - Window Configuration Examples

# This file contains example window configurations for different use cases
# Copy and modify these configurations based on your display setup

# ==============================================================================
# Desktop Configurations
# ==============================================================================

# Laptop/Small Screen (13-15 inch)
[laptop]
platform = "desktop"
width = 900
height = 650
min_width = 800
min_height = 500
resizable = true
maximized = false

# Standard Desktop (Full HD 1080p)
[desktop]
platform = "desktop"
width = 1024
height = 768
min_width = 800
min_height = 600
resizable = true
maximized = false

# Large Monitor (1440p/4K)
[large_monitor]
platform = "desktop"
width = 1200
height = 900
min_width = 1000
min_height = 700
resizable = true
maximized = false

# Ultra-wide Monitor
[ultrawide]
platform = "desktop"
width = 1400
height = 800
min_width = 1200
min_height = 600
resizable = true
maximized = false

# ==============================================================================
# Specialized Configurations
# ==============================================================================

# Kiosk Mode (Fixed size, non-resizable)
[kiosk]
platform = "desktop"
width = 1024
height = 768
min_width = 1024
min_height = 768
resizable = false
maximized = false
decorations = false

# Maximized Window
[maximized]
platform = "desktop"
width = 1200
height = 900
resizable = true
maximized = true
decorations = true

# Minimal Window (Emergency/Low-res displays)
[minimal]
platform = "desktop"
width = 800
height = 500
min_width = 800
min_height = 500
resizable = true
maximized = false

# ==============================================================================
# Platform-Specific Configurations
# ==============================================================================

# Web Platform (responsive, no fixed dimensions)
[web]
platform = "web"
# Window size not applicable for web platform
# Uses responsive CSS breakpoints instead

# Mobile Platform
[mobile]
platform = "mobile"
# Window size managed by mobile OS
# Uses mobile-optimized layouts

# ==============================================================================
# Usage Instructions
# ==============================================================================

# To use these configurations with the installer:

# 1. Using the launcher script:
#    ./launcher.sh
#    # Select from interactive menu

# 2. Using the run script with presets:
#    ./run.sh --compact      # Uses laptop config
#    ./run.sh --small        # Uses minimal config
#    ./run.sh                # Uses desktop config
#    ./run.sh --large        # Uses large_monitor config

# 3. Using custom dimensions:
#    ./run.sh --width 1024 --height 600

# 4. Direct Dioxus CLI usage:
#    dx serve --platform desktop
#    # (Uses Dioxus.toml configuration)

# ==============================================================================
# CSS Breakpoints Reference
# ==============================================================================

# The UI automatically adapts based on window height:
# - Normal: > 800px height
# - Compact: 650px - 800px height
# - Ultra-compact: 500px - 650px height
# - Minimal: < 500px height

# And window width:
# - Mobile: < 768px width
# - Desktop: >= 768px width

# ==============================================================================
# Performance Notes
# ==============================================================================

# For optimal performance:
# - Use desktop platform for native performance
# - Web platform is good for development/testing
# - Mobile platform for touch interfaces
# - Larger windows allow more information density
# - Smaller windows focus on essential information

# Memory usage scales with window size and complexity:
# - Minimal (800x500): ~50MB RAM
# - Compact (900x650): ~60MB RAM
# - Default (1024x768): ~70MB RAM
# - Large (1200x900): ~85MB RAM
