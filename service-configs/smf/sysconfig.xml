<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type='manifest' name='sysconfig'>
  <service name='system/sysconfig' type='service' version='1'>

    <create_default_instance enabled='true' />

    <!-- Dependencies -->
    <dependency name='filesystem' type='service' grouping='require_all' restart_on='none'>
      <service_fmri value='svc:/system/filesystem/local:default' />
    </dependency>

    <dependency name='loopback' type='service' grouping='require_all' restart_on='none'>
      <service_fmri value='svc:/network/loopback:default' />
    </dependency>

    <dependency name='manifest-import' grouping='optional_all' restart_on='none'>
      <service_fmri value='svc:/system/manifest-import:default' />
    </dependency>

    <!-- Method context -->
    <method_context>
      <method_credential user='root' group='root' />
      <method_environment>
        <envvar name='RUST_LOG' value='info,sysconfig=debug' />
      </method_environment>
    </method_context>

    <!-- Start method -->
    <exec_method
      type='method'
      name='start'
      exec='/usr/lib/sysconfig/sysconfig --socket /var/run/sysconfig.sock'
      timeout_seconds='60'>
      <method_context>
        <method_credential user='root' group='root' />
      </method_context>
    </exec_method>

    <!-- Stop method -->
    <exec_method
      type='method'
      name='stop'
      exec=':kill'
      timeout_seconds='60'>
      <method_context>
        <method_credential user='root' group='root' />
      </method_context>
    </exec_method>

    <!-- Refresh method -->
    <exec_method
      type='method'
      name='refresh'
      exec=':kill -HUP'
      timeout_seconds='60'>
      <method_context>
        <method_credential user='root' group='root' />
      </method_context>
    </exec_method>

    <!-- Properties -->
    <property_group name='startd' type='framework'>
      <propval name='duration' type='astring' value='contract' />
      <propval name='ignore_error' type='astring' value='core,signal' />
    </property_group>

    <property_group name='config' type='application'>
      <propval name='socket_path' type='astring' value='/var/run/sysconfig.sock' />
      <propval name='state_dir' type='astring' value='/var/lib/sysconfig' />
      <propval name='config_dir' type='astring' value='/etc/sysconfig.d' />
    </property_group>

    <!-- Service properties -->
    <stability value='Unstable' />

    <template>
      <common_name>
        <loctext xml:lang='C'>System Configuration Service</loctext>
      </common_name>
      <description>
        <loctext xml:lang='C'>
          Manages system configuration state and distributes it to platform-specific plugins
        </loctext>
      </description>
      <documentation>
        <manpage title='sysconfig' section='1M' />
      </documentation>
    </template>

  </service>
</service_bundle>
